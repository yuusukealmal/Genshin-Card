{
    "builds": [
        {
            "src": "index.js",
            "use": "@vercel/node",
            "config": {
                "includeFiles": [
                    "views/**/*.pug",
                    "node_modules/ttf2woff2/jssrc/ttf2woff2.wasm"
                ],
                "build": "git submodule update --init --recursive && node index.js"
            }
        }
    ],
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "index.js"
        },
        {
            "src": "/static/(.*)",
            "dest": "/public/$1"
        },
        {
            "src": "/(.*)",
            "dest": "index.js"
        }
    ]
}